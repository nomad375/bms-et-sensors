# InfluxDB Configuration
INFLUX_ORG=my-org
INFLUX_BUCKET=daq_data
INFLUX_TOKEN=my-super-secret-token
INFLUX_ADMIN_PASSWORD=password123
INFLUX_URL=http://influxdb:8086

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ACCESS_ADDRESS=https://grafana.example.com

# Dashboard Configuration
DASHBOARD_PORT=80

# Device Configuration
# Serial port for MicroStrain BaseStation 
MSCL_PORT=/dev/serial/by-id/usb-LORD_Sensing_Systems_WSDA-Base-200_80fa3a6ac07bed119b81ddf3fdf7b791-if00-port0
# Optional: keep raw stream in mscl_sensors and additionally write a resampled stream
MSCL_RESAMPLED_ENABLED=true
MSCL_RESAMPLED_MEASUREMENT=mscl_sensors_resampled
MSCL_RESAMPLED_INCLUDE_RAW_TS=true

# Temperature Limits for Redlab-TC
TEMP_MIN=-70
TEMP_MAX=600

# Raspberry Pi NetworkManager AP (rpi-nm-ap.sh)
AP_NAME=rpi-ap
AP_SSID=RPI-DAQ-AP
AP_PASSWORD=ChangeMe12345
# Allowed values: bg (2.4 GHz) or a (5 GHz)
AP_BAND=bg
AP_CHANNEL=4

# Network diagnostics services (iperf3)
DIAG_IPERF_PORT=5201
# Optional bind addresses for manual iperf3 server/client usage:
# DIAG_RPI_IPERF_BIND=10.42.0.1
# DIAG_UBUNTU_IPERF_BIND=10.42.0.32
